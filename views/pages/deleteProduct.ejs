<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ProduitTitre">Titre produit</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="ProduitTitre" value="<%= %-products.ProduitTitre %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="">Prix produit</label>
  <div class="col-sm-7">
    <input class="form-control" name="ProduitPrix" value="<%= %-products.ProduitPrix %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ProduitDescrip">Description Produit</label>
  <div class="col-sm-10">
    <textarea class="form-control" cols="20" name="Description" maxlength="3200" rows="3"><%= %-products.ProduitDescrip%></textarea>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ProduitPic">Photo</label>
  <div class="col-sm-7">
      <img src="/images/<%= %-products.ProduitPic %> " alt="<%= %-products.ProduitTitre %>">
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ProduitRegion">Region produit</label>
  <div class="col-sm-7">
    <input class="form-control" name="ProduitRegion" value="<%= %-products.ProduitRegion %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="categorie">Categorie Produit</label>
  <div class="col-sm-7">
    <input class="form-control" name="categorie" value="<%= %-products.categorie %>" />
  </div>
</div>
